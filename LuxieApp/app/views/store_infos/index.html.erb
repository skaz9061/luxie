<p id="notice"><%= notice %></p>

<h1>Listing Store Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_infos.each do |store_info| %>
      <tr>
        <td><%= store_info.name %></td>
        <td><%= store_info.phone_number %></td>
        <td><%= store_info.email %></td>
        <td><%= store_info.description %></td>
        <td><%= link_to 'Show', store_info %></td>
        <td><%= link_to 'Edit', edit_store_info_path(store_info) %></td>
        <td><%= link_to 'Destroy', store_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

