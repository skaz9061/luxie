<%= form_for([@luxie, @store_info], :url => luxie_store_info_path(@luxie)) do |f| %>
  <% if @store_info.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store_info.errors.count, "error") %> prohibited this store_info from being saved:</h2>

      <ul>
      <% @store_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<h3>Basic Info</h3>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
		

	<!-- Edit Nested Attributes for Address Class Instance -->
	<%= f.fields_for :address do |ff| %>
		<h3>Address</h3>
		<div class="field">
			<%= ff.label :street_address %><br>
			<%= ff.text_field :street_address %>
		</div>

		<div class="field">
			<%= ff.label :city %><br>
			<%= ff.text_field :city %>
		</div>

		<div class="field">
			<%= ff.label :state %><br>
			<%= ff.text_field :state %>
		</div>

		<div class="field">
			<%= ff.label :zip %><br>
			<%= ff.text_field :zip %>
		</div>
	<% end %>

  <div class="field">
    <h3>About Us</h3>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
