

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td>
					<% unless user.username == "admin" %> <!-- cannot delete admin -->
						<%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
					<% end %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
