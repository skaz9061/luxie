<h1>Login</h1>

<p id="alert"><%= alert %></p>

<%= form_for(:user, url: sessions_path) do |f| %>

<div class="field">
	<%= f.label :username %><br>
	<%= f.text_field :username %>
</div>
<div class="field">
	<%= f.label :password %><br>
	<%= f.password_field :password %>
</div><br>
<div class="actions">
	<%= f.submit "Login" %>
</div>
<% end %>